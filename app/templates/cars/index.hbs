{{#if hasBrands}}
    <div class="row">
        <div class="col-md-6">
            {{filter-one-dimension options=brands label='Brands' selectedOption=selectedBrand}}
        </div>
    </div>

    <hr class="top-divider">
{{/if}}

<div class="row">
    <div class="col-md-12">
        {{#each model as |car|}}
            {{#car-list-item car=car}}
                {{#if car.isChosen}}
                    <div class="text-success">
                        <h4>It's one of your favorite car, Carl!</h4>
                    </div>
                {{else}}
                    <button class="btn btn-success" {{action 'toggleSelectedForCar' car}}>Choose this car</button>
                {{/if}}
            {{/car-list-item}}
        {{else}}
            <h3>There will be tons of metal here soon!</h3>
        {{/each}}
    </div>
</div>

{{outlet}}
